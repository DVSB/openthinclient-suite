<project name="nb-bootstrap" default="pack" basedir=".">

  <target name="pack">
    <input message="Pleae enter locale:"
           addproperty="locale"
           defaultvalue="de_DE">
    </input>

		<mkdir dir="extract"/>   
    <unjar dest="extract" src="../lib/modules/org-openide-dialogs.jar" />
    <copy file="bundles/${locale}/org-openide-dialogs.properties" todir="extract/org/openide"></copy>
    <rename dest="extract/org/openide/Bundle.properties" src="extract/org/openide/org-openide-dialogs.properties"/>
    <jar manifest="extract/META-INF/MANIFEST.MF" basedir="extract" destfile="../lib/modules/org-openide-dialogs.jar" />
    <delete dir="extract"></delete>
    
