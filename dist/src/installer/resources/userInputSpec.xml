<userInput>
	<panel order="0">
		<os family="windows" />
		<createForPack name="server" />
		<field type="title" align="left" txt="Installation settings" bold="true" size="2" id="installation.settings" icon="/images/tool.png" />

		<field type="staticText" align="left" txt="Install server as Windows Service" id="install.server.as.windows.service" />
		<field type="check" variable="IS_SERVICE_INSTALL">
			<spec txt="Install as service" id="install.as.service" true="true" false="false" set="true" />
		</field>
		
		<field type="staticText" align="left" txt="Proxy for connection to update server" id="proxy.for.connection.to.update.server" />
		<field type="check" align="left" variable="PROXY_IN_USE">
			<spec txt="Use HTTP proxy" id="use.http.proxy" true="true" false="false" set="false" />
		</field>
	</panel>

	<panel order="1">
		<os family="unix" />
		<createForPack name="server" />
		<field type="title" align="left" txt="Installation settings" bold="true" size="2" id="installation.settings" icon="/images/tool.png" />

		<field type="staticText" align="left" txt="Install server as LINUX Service" id="install.server.as.linux.service" />
		<field type="check" variable="IS_SERVICE_INSTALL">
			<spec txt="Install as service" id="install.as.service" true="true" false="false" set="true" />
		</field>
		
		<field type="staticText" align="left" txt="Proxy for connection to update server" id="proxy.for.connection.to.update.server" />
		<field type="check" align="left" variable="PROXY_IN_USE">
			<spec txt="Use HTTP proxy" id="use.http.proxy" true="true" false="false" set="false" />
		</field>
	</panel>

	<panel order="2">
		<os family="windows" />
		<createForPack name="server" />
		<field type="title" align="left" txt="Service installation" bold="true" size="2" id="service.installation" icon="/images/tool.png" />

		<field type="staticText" align="left" txt="After installation" id="after.installation" />
		<field type="check" variable="IS_SERVICE_START">
			<spec txt="Start service after installation" id="start.service.after.installation" true="true" false="false" set="true" />
		</field>
		<field type="combo" variable="NTSERVICE_STARTTYPE">
			<description align="left" txt="At system startup" id="at.system.startup" />
			<spec>
				<choice txt="Start automatically" id="start.automatically" value="AUTO_START" />
				<choice txt="Start manually" id="start.manually" value="DEMAND_START" />
			</spec>
		</field>
	</panel>

	<panel order="3">
		<os family="unix" />
		<createForPack name="server" />
		<field type="title" align="left" txt="Service installation" bold="true" size="2" id="service.installation" icon="/images/tool.png" />

		<field type="check" variable="IS_SERVICE_START">
			<spec txt="Start service after installation." id="start.service.after.installation" true="true" false="false" set="true" />
		</field>
	</panel>

	<panel order="4">
		<createForPack name="server" />
		<field type="title" align="left" txt="Proxy settings" bold="true" size="2" id="proxy.settings" icon="/images/tool.png" />

		<field type="text" align="left" variable="PROXY_SERVER">
			<spec txt="Proxy server:" id="proxy.server" size="25" />
		</field>
		<field type="rule" align="left" variable="PROXY_PORT">
			<spec txt="Proxy port:" id="proxy.port" layout="N:5:5" />
		</field>
		<field type="space" />
		<field type="text" align="left" variable="PROXY_USER">
			<spec txt="Proxy user:" id="proxy.user" size="25" />
		</field>
		<field type="password" align="left" variable="PROXY_PASS">
			<spec>
				<pwd txt="Proxy password:" id="proxy.password" set="" size="25" />
				<pwd txt="Retype password:" id="retype.password" set="" size="25" />
			</spec>
			<validator class="com.izforge.izpack.util.PasswordEqualityValidator" txt="Both passwords must match." id="both.passwords.must.match"/>
		</field>
	</panel>
</userInput>