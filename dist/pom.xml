<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.openthinclient</groupId>
		<artifactId>master</artifactId>
		<version>1.0.0-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<name>openthinclient.org server distribution</name>

	<artifactId>dist</artifactId>
	<packaging>pom</packaging>

	<build>
		<plugins>
			<!-- build distribution -->
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<inherited>false</inherited>
						<phase>package</phase>
						<goals>
							<goal>directory-inline</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<descriptors>
						<descriptor>src/assembly/dist.xml</descriptor>
					</descriptors>
				</configuration>
			</plugin>

			<!-- build installer -->
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<echo>
									<![CDATA[
	project.name: ${project.name}
	project.version: ${project.version}
	project.build.finalName: ${project.build.finalName}
	settings.localRepository: ${settings.localRepository}
	maven.repo.local: ${maven.repo.local} 
	project.organization: ${project.organization}
	project.organization.name: ${project.organization.name}
	organization: ${organization}
	organization.name: ${organization.name}
	project.parent: ${project.parent}
	project.parent.name: ${project.parent.name}
	project.parent.organization: ${project.parent.organization}
	project.parent.organization.name: ${project.parent.organization.name}
	product.shortname: ${product.shortname}
	organization.shortname: ${organization.shortname}
	basedir: ${basedir}
	jboss.version: ${jboss.version}
	jboss.ejb3.version: ${jboss.ejb3.version}
             ]]>
								</echo>
								<ant dir="${basedir}/src/installer" antfile="build.xml">
									<target name="dist" />
									<property name="dist.dir"
										value="${project.build.directory}/${project.build.finalName}-dist.dir/${project.build.finalName}" />
									<property name="output.dir"
										value="${project.build.directory}/installer" />
									<property name="vendor.name" value="${organization.name}" />
									<property name="vendor.shortname" value="${organization.shortname}" />
									<property name="vendor.url" value="${organization.url}" />
									<property name="product.name" value="${project.parent.name}" />
									<property name="product.shortname" value="${product.shortname}" />
									<property name="version.full" value="${project.version}" />
									<property name="artifact.name"
										value="${product.shortname}-${project.build.finalName}" />
									<property name="jboss.version" value="${jboss.version}" />
									<property name="jboss.ejb3.version" value="${jboss.ejb3.version}" />
								</ant>
							</tasks>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>ant</groupId>
						<artifactId>ant</artifactId>
						<version>1.6.5</version>
					</dependency>
					<dependency>
						<groupId>ant</groupId>
						<artifactId>ant-nodeps</artifactId>
						<version>1.6.5</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.openthinclient</groupId>
			<artifactId>server</artifactId>
			<version>${pom.version}</version>
			<type>pom</type>
		</dependency>
		<dependency>
			<groupId>org.openthinclient</groupId>
			<artifactId>console</artifactId>
			<version>${pom.version}</version>
			<type>pom</type>
		</dependency>
	</dependencies>
</project>
